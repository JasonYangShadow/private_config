#!/bin/bash

source ~/.xinitrc

InstCheck(){
 inst=`ps -ef|grep -v grep|grep $1|wc -l`
 if [ $inst -ge 1 ];then
     return 0 
 else
     return 1 
 fi
}

InstCheck fcitx 
if [ $? -ne 0 ];then
    fcitx & 
fi

InstCheck nm-applet 
if [ $? -ne 0 ];then
    nm-applet & 
fi

