#fi

InstCheck slack 
if [ $? -ne 0 ];then
    slack & 
fi

InstCheck hexchat 
if [ $? -ne 0 ];then
    hexchat --minimize=2 & 
fi

InstCheck telegram-desktop 
if [ $? -ne 0 ];then
    telegram-desktop & 
fi

InstCheck thunderbird 
if [ $? -ne 0 ];then
    thunderbird & 
fi

InstCheck xfce4-power-manager 
if [ $? -ne 0 ];then
    xfce4-power-manager & 
fi

InstCheck unclutter
if [ $? -ne 0 ];then
    unclutter -idle 2 &
fi

InstCheck redshift
if [ $? -ne 0 ];then
    redshift -t 6500:4500 -l 35.4:139.4 &
fi

