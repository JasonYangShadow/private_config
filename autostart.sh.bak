#!/bin/bash

#init vps client
vps_flag=`ps -ef|grep sslocal|grep -e grep -v|wc -l`
if [[ $vps_flag -eq 0 ]];then
  server="192.157.208.142"
  serverport=(8088 8188 8288 8388 8488 8588 8688 8788 8888 8988)
  random=$[ $RANDOM % 10 ]
  selectport=${serverport[$random]}
  nohup sslocal -s $server -p $selectport -k '520daisy' 2>&1>>~/log/vps.log &
fi

#init aranr
~/.monitor.sh

#init redshift
redshift_flag=`ps -ef|grep redshift|grep -e grep -v|wc -l`
if [[ $redshift_flag -eq 0 ]];then
  nohup redshift -l 31.2:121.5 -t 5500:4000 2>&1>>~/log/redshift.log &
fi

#init ibus daemon
ibus-daemon &

#restore nitrogen wallpaper setting
nitrogen --restore &

#autolock
xautolock_flag=`ps -ef|grep xautolock|grep -e grep -v|wc -l`
if [[ $xautolock_flag -eq 0 ]];then
   xautolock -time 10 -locker blurlock &
fi
