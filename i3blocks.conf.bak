## the resources are from this website: http://kumarcode.com/Colorful-i3/
separator_block_width=8

[memory]
label=
command=/usr/lib/i3blocks/memory
separator=true
interval=30
color=#578CA9

[disk-root]
label=
command=/usr/lib/i3blocks/disk /
interval=30
color=#F6D155

[ethernet]
label=
instance=enp0s25
command=/usr/lib/i3blocks/iface
color=#004B8D
interval=10

[wireless]
label= 
instance=wlp3s0
command=/usr/lib/i3blocks/iface
color=#FF3300
interval=10

[wireless]
label= 
instance=wlp0s29u1u5
command=/usr/lib/i3blocks/iface
color=#FF3300
interval=10


[tor]
label=
command=/bin/python2 ~/.i3/tor.py
color=#95DEE3
interval=60

[ss]
label=
command=/bin/python2 ~/.i3/ss.py
color=#42f4a4
interval=90

[bandwidth]
command=~/.i3/bandwidth
interval=persist
markup=pango
color=#EDCDC2

[temp]
label=
command=echo "$(sensors coretemp-isa-0000 | awk '/Core 0:/ {print $3}')"
interval=10
color=#CE3175

#install yaourt -S sysstat
[cpu]
label=
command=/usr/lib/i3blocks/cpu_usage
interval=10
#min_width=100.00%
color=#5A7247

#[load]
#label= 
#command=/usr/lib/i3blocks/load_average
#interval=10
#color=#6c71c4

[volume]
label=
command=/usr/lib/i3blocks/volume
interval=2
signal=10
color=#CFB095

[battery]
label=
command=python3 ~/.i3/battery.py
markup=pango
interval=10
color=#79C753

[time]
label=
command=date '+%a %m-%d-%y %k:%M'
interval=5
color=#FAE03C
