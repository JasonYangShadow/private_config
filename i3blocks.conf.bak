## the resources are from this website: http://kumarcode.com/Colorful-i3/
separator_block_width=14

[memory]
label=
command=/usr/lib/i3blocks/memory
separator=true
interval=30
color=#f4dc41

[disk-root]
label=
command=/usr/lib/i3blocks/disk /
interval=30
color=#ff7628

[ethernet]
label=
instance=enp0s25
command=/usr/lib/i3blocks/iface
color=#00a878
interval=10

[wireless]
label=
instance=wlp2s0
command=/usr/lib/i3blocks/iface
color=#f4f441
interval=10

[tor]
label=
command=/bin/python2 ~/.i3/tor.py
color=#70fff7
interval=60

[bandwidth]
command=~/.i3/bandwidth
interval=persist
markup=pango
color=#41f44c

[temp]
label=
command=echo "$(sensors coretemp-isa-0000 | awk '/Core 0:/ {print $3}')"
interval=10
color=#f44141

#install yaourt -S sysstat
[cpu]
label=
command=/usr/lib/i3blocks/cpu_usage
interval=10
min_width=100.00%
separator=true
color=#ff28ff

#[load]
#label= 
#command=/usr/lib/i3blocks/load_average
#interval=10
#color=#6c71c4

[volume]
label=
command=/usr/lib/i3blocks/volume
interval=2
signal=10
color=#41f4e8

[battery]
label=
command=python3 ~/.i3/battery.py
markup=pango
interval=10
color=#70a2ff

[time]
label=
command=date '+%a %m-%d-%y %k:%M'
interval=5
color=#287aff
