## the resources are from this website: http://kumarcode.com/Colorful-i3/
separator_block_width=14

[memory]
label=
command=/usr/lib/i3blocks/memory
separator=true
interval=30

[disk-root]
label=:
command=/usr/lib/i3blocks/disk /
interval=30
color=#1793D1

[ethernet]
label=
instance=enp0s25
command=/usr/lib/i3blocks/iface
color=#00FF00
interval=10

[wireless]
label=
instance=wlp2s0
command=/usr/lib/i3blocks/iface
color=#00FF00
interval=10

[temp]
label=
command=echo "$(sensors coretemp-isa-0000 | awk '/Core 0:/ {print $3}')"
interval=10
color=#b58900

#install yaourt -S sysstat
[cpu]
label=
command=/usr/lib/i3blocks/cpu_usage
interval=10
min_width=100.00%
separator=true

#[load]
#label= 
#command=/usr/lib/i3blocks/load_average
#interval=10
#color=#6c71c4

[volume]
label=
command=/usr/lib/i3blocks/volume
interval=2
signal=10
color=#d70a53

[time]
label=
command=date '+%a %m-%d-%y %k:%M'
interval=5
color=#50C878

[battery]
label=
command=python3 /home/jason/.i3/battery.py
markup=pango
interval=10


