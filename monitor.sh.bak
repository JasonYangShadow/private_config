#!/bin/bash
EXTERNAL_OUTPUT="VGA1"
INTERNAL_OUTPUT="LVDS1"

extern_flag=`xrandr|grep "VGA1 connected"|wc -l`
if [ $extern_flag -eq 1 ];then
    xrandr --output $INTERNAL_OUTPUT --primary --mode 1280x800 --rotate normal --output $EXTERNAL_OUTPUT --auto --right-of $INTERNAL_OUTPUT
else
    xrandr --output $INTERNAL_OUTPUT --primary --mode 1280x800 --rotate normal --output $EXTERNAL_OUTPUT --off
fi
